// Test unary operators (negation and logical NOT)

// ===== Arithmetic Negation (-) =====

// Negate literal
x = -5;
println x;

// Negate positive variable
a = 10;
b = -a;
println b;

// Double negation
c = --5;
println c;

// Negation in expression
result = -5 + 3;
println result;

// Negation with multiplication
result = -2 * 3;
println result;

// Negate function result
sub get_value() {
    return 7;
}

negated = -get_value();
println negated;

// ===== Logical NOT (!) =====

// NOT on false (0)
x = !0;
println x;

// NOT on true (non-zero)
y = !1;
println y;

z = !5;
println z;

// Double NOT
w = !!1;
println w;

// NOT with comparisons
result = !(5 > 10);
println result;

result = !(3 == 3);
println result;

// NOT in conditionals
flag = 0;
if !flag {
    println 100;
}

flag = 1;
if !flag {
    println 200;  // Should not print
}

// ===== Combining Unary with Boolean Operators =====

// NOT with AND
result = !0 && !0;
println result;

result = !1 && !0;
println result;

// NOT with OR
result = !0 || !1;
println result;

result = !1 || !1;
println result;

// Complex: NOT of compound expression
a = 5;
b = 10;
result = !(a > b);
println result;

result = !(a < b);
println result;

// NOT in while loop
counter = 0;
while !counter {
    println 999;
    counter = 1;  // Exit after one iteration
}

// ===== Combining Negation with Arithmetic =====

// Negation with addition/subtraction
result = -5 + -3;
println result;

result = -10 - -5;
println result;

// Negation in comparison
x = -5;
y = -3;
result = x < y;
println result;

// Complex expression
result = -2 * 3 + -4;
println result;

// ===== Edge Cases =====

// Negation of zero
zero = 0;
result = -zero;
println result;

// NOT of zero (should be 1)
result = !zero;
println result;

// Chained negations
result = ---5;
println result;

// Chained NOTs
result = !!!0;
println result;

// Negation and NOT together
result = -!5;  // !5 = 0, -0 = 0
println result;

result = !-5;  // -5 = -5 (truthy), !-5 = 0
println result;

// Final test: all together
x = 10;
if !(x < 0) && x > 5 {
    println 777;
}

println 9999;
