{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Toy",
  "scopeName": "source.toy",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#numbers" },
    { "include": "#punctuation" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.toy",
          "match": "//.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.conditional.toy",
          "match": "\\b(if|else)\\b"
        },
        {
          "name": "keyword.control.loop.toy",
          "match": "\\b(while)\\b"
        },
        {
          "name": "keyword.other.print.toy",
          "match": "\\b(print)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.toy",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.arithmetic.toy",
          "match": "(\\+|\\-|\\*|\\/)"
        },
        {
          "name": "keyword.operator.assignment.toy",
          "match": "="
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.integer.toy",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.terminator.statement.toy",
          "match": ";"
        },
        {
          "name": "punctuation.section.block.begin.toy",
          "match": "\\{"
        },
        {
          "name": "punctuation.section.block.end.toy",
          "match": "\\}"
        },
        {
          "name": "punctuation.section.parens.begin.toy",
          "match": "\\("
        },
        {
          "name": "punctuation.section.parens.end.toy",
          "match": "\\)"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.toy",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
